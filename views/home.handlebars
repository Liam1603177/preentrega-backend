<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Productos</title>
</head>
<body>
    <h1>Productos</h1>

    <!-- Mostrar los productos -->
    <div class="products-list">
        {{#each products}}
            <div class="product-card">
                <h2>{{this.title}}</h2>
                <p>{{this.description}}</p>
                <p>Precio: ${{this.price}}</p>
                <p>Categoría: {{this.category}}</p>
                <a href="/products/{{this.id}}">Ver detalles</a> <!-- Enlace a la vista del producto -->
                <form action="/carts/{{cartId}}/products/{{this.id}}" method="POST">
                    <button type="submit">Agregar al carrito</button>
                </form>
            </div>
        {{/each}}
    </div>

    <!-- Paginación -->
    <div class="pagination">
        {{#if prevPage}}
            <a href="/products?page={{prevPage}}&limit={{limit}}&sort={{sort}}&query={{query}}">Anterior</a>
        {{/if}}

        <span>Página {{page}} de {{totalPages}}</span>

        {{#if nextPage}}
            <a href="/products?page={{nextPage}}&limit={{limit}}&sort={{sort}}&query={{query}}">Siguiente</a>
        {{/if}}
    </div>
</body>
</html>
