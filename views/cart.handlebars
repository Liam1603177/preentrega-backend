<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carrito</title>
</head>
<body>
    <h1>Carrito de Compras</h1>

    <!-- Mostrar los productos del carrito -->
    <div class="cart-items">
        {{#each products}}
            <div class="cart-item">
                <h2>{{this.productId.title}}</h2>
                <p>Precio: ${{this.productId.price}}</p>
                <p>Cantidad: {{this.quantity}}</p>
                <form action="/carts/{{cart._id}}/products/{{this.productId._id}}" method="POST">
                    <label for="quantity">Cantidad:</label>
                    <input type="number" name="quantity" value="{{this.quantity}}" min="1">
                    <button type="submit">Actualizar cantidad</button>
                </form>
                <form action="/carts/{{cart._id}}/products/{{this.productId._id}}/delete" method="POST">
                    <button type="submit">Eliminar producto</button>
                </form>
            </div>
        {{/each}}
    </div>

    <a href="/carts/{{cart._id}}/checkout">Proceder al pago</a>
</body>
</html>
